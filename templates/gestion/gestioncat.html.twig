{% extends 'base.html.twig' %}

{% block title %}{{ titre }}{% endblock %}

{% block body %}

        {{ form_errors(form) }}

        {{ form_start(form) }}
        
            <div class='container mt-4'>
                <div class='row justify-content-center'>
                    <h1>{{ titre }} : </h1>

                    <div class="col-12 mb-3">
                        {{ form_row(form.libelle) }}
                    </div>

                    <div class="col-12 mb-3">
                        {{ form_row(form.image) }}
                    </div>

                    <div class="col-12 mb-3">
                        {{ form_row(form.active) }}
                    </div>

                    <div class="col-6 mb-3">
                        {{ form_row(form.save) }}
                    </div>
                </div>
            </div>

        {{ form_end(form) }}

                {{ form_errors(form) }}

{% endblock %}
