{% extends 'base.html.twig' %}

{% block title %}nouvelle adresse
{% endblock %}

{% block body %}

	{{ form_start(form) }}
	<div class='container mt-4'>
		<div class='row justify-content-center position-relative'>

			<div class="col-md-6 col-12 mb-3">
				{{ form_row(form.nom) }}
			</div>

			<div class="col-md-6 col-12 mb-3">
				{{ form_row(form.prenom) }}
			</div>

			<div class="col-12 mb-3">
				{{ form_row(form.telephone) }}
			</div>

			<div class="col-12 mb-3">
				{{ form_row(form.adresse) }}
			</div>

			<div class="col-md-6 col-12 mb-3">
				{{ form_row(form.cp) }}
			</div>

			<div class="col-md-6 col-12 mb-3">
				{{ form_row(form.ville) }}
			</div>

			<div class="col-md-6 col-12 mb-3">
				{{ form_row(form.agreeTerms) }}
			</div>

			<div class="col-md-6 col-12 position-relative mt-5">
				{{ form_row(form.save, {
                        'label': 'Enregistrer',
                        'label_attr': {'class': 'btn position-absolute bottom-0 end-0'}}
				)}}
			</div>
			
		</div>
	</div>

	{{ form_end(form) }}


{% endblock %}
