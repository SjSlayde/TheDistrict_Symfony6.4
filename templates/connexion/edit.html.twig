{% extends 'base.html.twig' %}

{% block title %}Modifier adresse
{% endblock %}

{% block body %}

	{{ form_start(form) }}
	<div class='container mt-4'>
		<div class='row justify-content-center'>


			<div class="col-6 mb-3">
				{{ form_row(form.nom) }}
			</div>

			<div class="col-6 mb-3">
				{{ form_row(form.prenom) }}
			</div>

			<div class="col-6 mb-3">
				{{ form_row(form.email) }}
			</div>

			<div class="col-6 mb-3">
				{{ form_row(form.telephone) }}
			</div>

			<div class="col-12 mb-3">
				{{ form_row(form.plainPassword) }}
			</div>

			<div class="col-12 mb-3">
				{{ form_row(form.adresse) }}
			</div>

			<div class="col-6 mb-3">
				{{ form_row(form.cp) }}
			</div>

			<div class="col-6 mb-3">
				{{ form_row(form.ville) }}
			</div>

			<div class="col mb-3">
				{{ form_row(form.agreeTerms) }}
			</div>

			{# <div class="col mb-3">
			                    {{ form_row(form.agreeTerms) }}
			                </div> #}

			<div class="col position-relative">
				<button type="submit" class="btn position-absolute bottom-0 end-0">Enregistrer</button>
			</div>

		</div>
	</div>

	{{ form_end(form) }}


{% endblock %}
